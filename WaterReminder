import time
from plyer import notification

# install plyer and time by using pip in the terminal

if __name__ == "__main__":
    while True:
        notification.notify (
        title = "**You should drink water now",
        message = "Getting enough water every day is important for your health. Drinking water can prevent dehydration, a condition that can cause unclear thinking, result in mood change,your body to overheat", 
        timeout = 1
        )
        
        # tim.sleep() is for repeating your programme if you want to repeat this multiple time in your day
        # (_) works only for seconds so 60*60 is for one hour
        # You can skip this too if you don't want to repeat this program
        
        time.sleep(60*60)
